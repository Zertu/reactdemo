{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "strict":1,
        "no-undef": 1, // http://eslint.org/docs/rules/no-undef
        "no-unused-vars":"warn",
        "quotes": [
            "error",
            "single"
        ],
        "require-yield":0,
        "no-console":"warn",
        "semi": [
            "error",
            "never"
        ]
    }
}